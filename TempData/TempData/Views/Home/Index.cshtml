
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @ViewBag.M
    @if(TempData["msg"]!=null)
    {
        @TempData["msg"]
        TempData.Keep("msg"); @*//or  TempData.Keep("msg") for a particular msg to be kept in temp data*@
    }
    <div> 
        @using(Html.BeginForm("Insert","Home"))
        {
            <table>
                <tr>
                    <td>
                        @Html.Label("Department Name")
                    </td>
                    <td>
                        @Html.TextBox("DName")
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Enter HOD Name")
                    </td>
                    <td>
                        @Html.TextBox("HOD")
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="submit" />
                    </td>
                    <td>
                        <input type="reset" />

                    </td>
                </tr>
            </table>
        } 

        @Html.ActionLink("Go To Test","Test","Home")


    </div>
</body>
</html>
